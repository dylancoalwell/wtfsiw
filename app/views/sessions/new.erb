<div class="container">
  <h1>Welcome Back!</h1>
  <a class="home" action="/" href="/">Home</a>
  <p>Please enter the following information to register:</p>
  <% if @errors %>
    <% @errors.each do |error| %>
      <p class="error"><%= error %></p>
    <% end %>
  <% end %>
  <form class="submit-form" action="/sessions/new" method="post">
    <label for="email">Enter E-Mail:</label>
    <input id='email' placeholder="example@example.com" type="text" name="email"></input>
    <label for="password">Enter Password:</label>
    <input id='password' placeholder="password" type="password" name="password"></input>
    <button class="nav-link" type="submit" name="submit">Submit!</button>
  </form>
</div>
